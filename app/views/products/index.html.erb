
<div class="container-fluid">
  <div class="row">
    <% @products.each do |item| %>
    <div class="col-md-3">  
      <div class="thumbnail">
        <div class="image-container">
          <img><%= image_tag item.image %>
        </div>
          <h3><%= item.name %></h3>
          <p><%= item.description %></p>
          <h4><%= item.price %></h4>
        </div>          
      </div> 
    <% end %> 
  </div> 
</div>    