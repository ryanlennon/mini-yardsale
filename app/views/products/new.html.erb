<div class="container">
  <h2> Enter product information here </h2>
    <%= form_tag '/products', method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: 'Enter name' %>
     </div>

      <div class="form-group">
        <%= label_tag :price, nil %>
        <%= text_field_tag :price, nil, class: "form-control", placeholder: 'Enter price' %>
      </div>

      <div class="form-group">
        <%= label_tag :image %>
        <%= text_field_tag :image, nil, class: "form-control", placeholder: 'Enter the image url' %>
      </div>

      <div class="form-group">
        <%= label_tag :description %>
        <%= text_field_tag :description, nil, class: "form-control", placeholder: 'Enter a description' %>
      </div>

      <div class="form-group">
        <%= button_tag "Submit!", class: 'btn btn-default' %>
      </div>

    

    <% end %>
</div>

  