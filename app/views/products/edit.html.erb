<div class="container">
  <h2>Update product information below</h2>
    <%= form_tag "products/#{@product.id}", method: :patch do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control", placeholder: 'Edit name' %>
    </div>

    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "form-control", placeholder: 'Edit price' %>
    </div>

    <div class="from-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, @product.image, class: "form-control", placeholder: 'Edit image url' %>
    </div>

    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control", placeholder: 'Edit the description' %>
    </div>
  <% end %>
  
</div>